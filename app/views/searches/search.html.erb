<div class="container">
  <h2>
     検索結果
    "<%= @content %>"
  </h2>
  <div class="row col-12">
    <table class="text-center mx-auto, table table-bordered", style="font-size:20px;">
      <thead class="thead-light">
        <tr>
          <% if @model == "region" %>
            <th>地域名</th>
            <th>件数</th>
          <% else %>
            <th>場所画像</th>
            <th>場所名</th>
            <th>地面</th>
            <th>場所説明</th>
          <% end %>
          </tr>
      </thead>
      <body>
        <% if @model == "region" %>
        <% @datas.each do |data| %>
          <tr>
            <td width="150">
              <%= link_to region_path(data.id) do %>
                <%= data.name %>
              <% end %>
            </td>
            <td>
              <%= data.places.count %>件
            </td>
            <% end %>
          </tr>
          <% end %>
            <% if @model == "place" %>
            <% @datas.each do |data| %>
          <tr>
            <td width="150">
              <%= attachment_image_tag(data, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg") %>
            </td>
            <td width="150">
              <%= data.name %>
            </td>
            <td width="150">
              <%= data.ground%>
            </td>
            <td>
              <%= data.explanation %>
            </td>
          </tr>
          <% end %>
          <% end %>
      </body>
    </table>
  </div>
</div>