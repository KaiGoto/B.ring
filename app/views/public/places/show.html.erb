<h2>場所詳細</h2>
<%= attachment_image_tag(@place, :image, :fill, 200, 200, format: 'jpeg', fallback: "no_image.jpg") %>

<div>
  <div>場所名</div>
  <div><%= @place.name %></div>
</div>
<div>
  <div>地面</div>
  <div><%= @place.ground %></div>
</div>
<div>
  <div>場所説明</div>
  <div><%= @place.explanation %></div>
</div>
<div>
  <div>地域名</div>
  <div>
    <%= link_to region_path do %>
    <%= @place.region.name %>
    <% end %>
  </div>
</div>
<!--いいね機能ページ-->
<%= render 'public/favorites/favorite', place: @place %>
<!--コメントページ-->
<div id="place_comment-<%= @place.id %>">
<%= render 'public/comments/comment', place: @place, place_coment: @place_comment %>
