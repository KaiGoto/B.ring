<div class="container mt-2">
  <h2>場所一覧</h2>
  <p>全<%= @place_all.count %>件</p>
  <div class="row col-12">
    <table class="mx-auto">
      <thead>
        <tr>
          <td width="150">場所画像</td>
          <td width="150">場所名</td>
          <td width="150">住所</td>
          <td width="150">地域名</td>
          <td width="150">コメント</td>
        </tr>
      </thead>
      <tbody>
        <% @places.each do |place|%>
        <tr>
          <td>
            <%= link_to place_path(place.id) do %>
            <%= attachment_image_tag(place, :image, :fill, 150, 150, format: 'jpeg', fallback: "no_image.jpg") %>
            <% end %>
          </td>
          <td>
            <%= link_to place_path(place.id) do %>
            <%= place.name %>
            <% end %>
          </td>
          <td><%= place.address %></td>
          <td><%= place.region.name %></td>
          <td>
            <%= link_to "#{place.place_comments.count} コメント", place_path(place.id) %></div>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
    <div class="text-center">
      <%= paginate @place_kaminari %>
    </div>
  </div>
</div>