<h2>場所一覧</h2>
<p>全<%= @place_all.count %>件</p>

<%= @place.each do |place|%>
<div>
  <%= link_to place_path(place.id) do %>
  <%= attachment_image_tag(place, :image, :fill, 200, 200, format: 'jpeg', fallback: "images/no_image.jpg") %>
  <% end %>
</div>
<div>
  <%= link_to place_path(place.id) do %>
  <%= place.name %>
  <% end %>
</div>
<% end %>
<div>
  <%#= @place.region.name %>
</div>

<%= paginate @place %>

