<div class="commentlist">
  <% @place.place_comments.each do |place_comment| %>
  <div class="commentitem">
    <!--ユーザー画像-->
    <tr>
      <td width="150"><%= attachment_image_tag(@user, :image, :fill, 200, 200, format: 'jpeg', fallback: "no_image.jpg") %></td>
      <!--ユーザー表示名-->
      <td width="150"><%= place_comment.user.nickname %>さん</td>
      <!--コメントをした時間-->
      <td width="150"><%= place_comment.created_at.strftime('%Y/%m/%d') %></td>
      <!--コメント-->
      <td width="250"><%= place_comment.comment %></td>
      <td width="150">
        <% if place_comment.user == current_user %>
        <a class="comment-delete">
          <%= link_to "削除", place_place_comment_path(place_comment.place,place_comment), method: :delete, remote: true, class:"btn btn-danger px-4" %>
        </a>
        <% end %>
      </td>
    </tr>
  </div>
  <% end %>
</div>