<div class="container">
  <h2>お問合せ内容確認</h2>
  <table class="mx-auto", style="font-size:20px;">
    <thead>
      <tr>
        <td>お名前</td>
        <td width="100"></td>
        <td><%= @contact.name %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td width="100"></td>
        <td><%= @contact.email %></td>
      </tr>
      <tr>
        <td>メッセージ</td>
        <td width="100"></td>
        <td><%= @contact.message %></td>
      </tr>
    </thead>
  </table>

  <%= form_with model: @contact, local:true do |f| %>
    <%= f.hidden_field :name %>
    <%= f.hidden_field :email %>
    <%= f.hidden_field :telephone_number %>
    <%= f.hidden_field :subject %>
    <%= f.hidden_field :message %>
    <div class="text-center"><%= f.submit '送信', class:"btn btn-success" %></div><br>
  <% end %>
  <%= form_with model: @contact, url: back_path, local:true do |f| %>
    <%= f.hidden_field :name %>
    <%= f.hidden_field :email %>
    <%= f.hidden_field :phone_number %>
    <%= f.hidden_field :subject %>
    <%= f.hidden_field :message %>
    <div class="text-center"><%= f.submit '入力画面に戻る', class:"btn btn-warning" %></div>
  <% end %>
</div>