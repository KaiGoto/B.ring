<h2>
  <%= @model %> search for
  "<%= @content %>"
</h2>
<table>
  <thead>
    <tr>
      <% if @model == "region" %>
      <th></th>
      <th>Name</th>
      <% else %>
      <th></th>
      <th>Name</th>
      <th>Opinion</th>
        <% end %>
      </tr>
  </thead>
  <tbody>
    <% if @model == "region" %>
    <% @datas.each do |data| %>
      <tr>
        <th>
          <%= attachment_image_tag data, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
        </th>
        <th>
          <%= data.name %>
        </th>
        <th>
          場所数<%= data.place.count %>
        </th>
        <th>
          <%= link_to "Show",region_path(data.id) %>
        </th>
        <% end %>
        <% end %>
      </tr>
        <% if @model == "place" %>
        <% @datas.each do |data| %>
      <tr>
        <th>
          <%= attachment_image_tag @place, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
        </th>
        <th>
          <%= data.name %>
        </th>
        <th>
          <%= data.explanation %>
        </th>
      </tr>
      <% end %>
      <% end %>
  </tbody>
</table>