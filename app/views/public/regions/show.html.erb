<div class="region">
  <div class="container">
    <h2><%= @regions.name %>地域</h2>
    <div class="row col-12">
      <table class="text-center, mx-auto, table table-bordered", style="font-size:20px;">
        <thead class="thead-light">
          <tr>
            <th width="150">場所名</th>
            <th width="150">地面</th>
            <th colspan="3">住所</th>
          </tr>
        </thead>
        <body>
          <% @regions.places.each do |region| %>
          <tr>
            <td width="150">
              <%= link_to place_path(region) do %>
              <%= region.name %>
              <% end %>
            </td>
            <td width="150"><%= region.ground %></td>
            <td colspan="3"><%= region.address %></td>
          </tr>
        </body>
        <% end %>
      </table>
    </div>
  </div>
</div>