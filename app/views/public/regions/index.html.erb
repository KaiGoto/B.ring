<div class="region">
  <div class="container">
    <h2>地域一覧</h2>
    <p>全<%= @region_all.count %>地域</p>
    <div class="row col-12">
      <table class="text-center mx-auto">
        <thead>
          <tr>
            <th style="font-size: 150%;">地域名</th>
          </tr>
        </thead>
        <body>
          <% @region.each do |region| %>
          <tr>
            <td>
              <%= link_to region_path(region.id) do %>
              <%= region.name %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </body>
      </table>
    </div>
  </div>
</div>