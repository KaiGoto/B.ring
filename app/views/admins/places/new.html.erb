<div class="container mt-2">
  <h2>場所新規登録</h2>
  <%= render 'layouts/errors_massage', obj: @place %>
  <%= form_with model: @place, url: admins_places_path, method: :post, local:true do |f| %>
  <div class="row">
    <div class="mx-auto">
      <table>
        <tr>
          <td width="150">場所画像</td>
          <td><%= f.file_field :image %></td>
        </tr>
        <tr>
          <td>場所名</td>
          <td><%= f.text_field :name, :placeholder => "場所名" %></td>
        </tr>
        <tr>
          <td>場所説明</td>
          <td><%= f.text_area :explanation, :placeholder => "ここに説明文を記述します", :size=>"40x5" %></td>
        </tr>
        <tr>
          <td>地域</td>
          <td><%= f.collection_select(:region_id, Region.all, :id, :name,  {prompt: "--選択してください--"}) %></td>
        </tr>
        <tr>
          <td>地面</td>
          <td><%= f.select :ground, [["コンクリート", "コンクリート"], ["砂", "砂"], ["砂利", "砂利"  ] ,["芝生", "芝生"]], include_blank: "状態を選択してください" %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= f.text_field :address,placeholder:"住所を入力して下さい", :size=>"40"  %></td>
        </tr>
      </table>
      <div class="text-center">
        <%= f.submit '新規登録', class: 'btn btn-primary px-4' %>
      </div>
    </div>
    <% end %>
  </div>
</div>