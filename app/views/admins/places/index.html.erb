<h2>場所一覧</h2>
<p>全<%#= @place_all.count %>件</p>

<table>
  <thead>
    <tr>
      <th>場所ID</th>
      <th>場所名</th>
      <th>地域名</th>
      <th>地面</th>
    </tr>
  </thead>
  <body>
    <%= @place.each do |place|%>
      <tr>
        <th><%= place.id %></th>
        <th>
          <%= link_to admins_place_path(place.id) do %>
          <%= attachment_image_tag(place, :image, :fill, 200, 200, format: 'jpeg', fallback: "images/no_image.jpg") %>
          <% end %>
        </th>
        <th><%= place.region.name %></th>
        <th><%= place.ground %></th>
      </tr>
  </body>
  <% end %>
</table>
<%= paginate @place %>
